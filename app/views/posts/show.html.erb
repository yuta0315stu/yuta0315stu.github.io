<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <!-- 以下の1行を<%= %>を用いて書き換えてください -->
     <%= @post.content %>
      </p>
       <div class="post-time">
        <!-- @postのcreated_atカラムのデータを表示してください -->
        <%= @post.created_at %>
      </div>
    </div>
    <%= link_to("edit","/posts/#{@post.id}/edit") %>
    <%= link_to("destroy","/posts/#{@post.id}/destroy",{method: "post"}) %>
  </div>
</div>